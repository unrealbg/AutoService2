@inherits LayoutComponentBase

<div class="page">
    <!-- Top Bar -->
    <header>
        <div class="brand">
            <div class="logo">AS</div>
            <div>
                <div>AutoService</div>
                <div class="muted" style="font-size:12px;">Управление на автосервиз</div>
            </div>
        </div>

        <div class="search-box" role="search">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path d="M15.5 15.5L21 21" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2"/>
            </svg>
            <input type="search" placeholder="Търси по рег. номер, клиент, VIN…" aria-label="Търсене" />
        </div>

        <div class="top-actions">
            <button class="btn">Нова поръчка</button>
            <button class="btn primary">Нов прием</button>
        </div>
    </header>

    <!-- Side Navigation -->
    <NavMenu />

    <!-- Main Content -->
    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>
